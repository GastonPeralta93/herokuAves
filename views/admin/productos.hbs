<div class="container" style="margin-top: 100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-left">
                <span>Hola {{usuario}}</span>
            </p>
            <p class="text-right">

                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas
                    fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}

    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2>Listado de Productos</h2>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/productos/agregar" class="btn btn-success">
                <i class="fas fa plus"></i>
                Nuevo</a>
        </div>

        <div class="col-3 text-right">
            <form class="form-inline" action="/admin/productos" method="get">
                <input class="form-control" type="search" placeholder="Buscar" 
                aria-label="Search" name="q" {{#if q}} value="{{q}}"  {{/if}}>
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button> 
            </form>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    <br>
    {{!-- inicio fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Descuento</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Especie</th>

                        <th scope="col" class=" text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        {{!-- si quiero imprimir mas habilito subtitulo y cuerpo --}}
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td> 
                        <th>${{precio}}</th>
                        <th>{{descuento}}%</th>
                        <th>{{cuerpo}}</th>
                        <th>{{subtitulo}}</th>
                        <td class="text-right">
                            <a href="/admin/productos/modificar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/productos/eliminar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            <p>No se encontraron resultados para "<b>{{q}}</b>"</p>
            {{/unless}}
            {{/if}}
        </div>
    </div>


    {{!-- fin fila 3 --}}
</div>